# Embeddings provider (default: OpenAI)
OPENAI_API_KEY=your-openai-api-key
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_API_BASE=https://api.openai.com/v1

# Data source
CARD_SOURCE_PATH=data/source/cards.tsv

# Chroma (HTTP server)
CHROMA_HOST=127.0.0.1
CHROMA_PORT=8000
CHROMA_HTTP_URL=http://127.0.0.1:8000
CHROMA_PERSIST_PATH=./docker/chroma/data

# Prefect
PREFECT_API_URL=http://127.0.0.1:4200/api
PREFECT_UI_URL=http://127.0.0.1:4200
PREFECT_WORK_POOL=cards-local-pool
PREFECT_WORK_QUEUE=cards-default

# Collection defaults
COLLECTION_PROVIDER=openai
COLLECTION_MODEL=text-embedding-3-small
COLLECTION_VARIANT=default
DEFAULT_COLLECTION_NAME=cards__openai__text-embedding-3-small__default

# Safety toggles
CONFIRM_DESTRUCTIVE_RESET=false
